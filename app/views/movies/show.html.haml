-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Director:
    = @movie.director
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description


- @videos_list.each do |element|
- video_id =  element.content.split(":").last
  %iframe{:id=> "player", :type=>"text/html", :src=>"http://www.youtube.com/embed/#{video_id}"}
  
= link_to 'Edit', edit_movie_path(@movie)
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Find Movies With Same Director', same_director_movie_path(@movie), :method => :get
= link_to 'Back to movie list', movies_path
